<h2 class="<%= @product.sold ? "sold" : "" %>">
  Item #<%= @product.id %>: <%= @product.name %>
  <em><% if @product.sold %><strong>vendido</strong> <% end %>por <%= to_currency(@product.price) %></em>
</h2>

<p id="notice"><%= notice %></p>

<div class="photos pikachoose">
  <ul id="photos" class="jcarousel-skin-pika">
    <% @product.photos.each do |photo| %>
      <li><%= link_to image_tag(photo.image.url(:medium), :alt => "Clique na foto para vê-la no tamanho original"), photo.image.url %></li>
    <% end %>
  </ul>
</div>

<div class="description">
  <% unless @product.description.blank? %>
    <h3>Descrição</h3>
    <div><p><%=raw @product.description %></p></div>
  <% end %>
  <% unless @product.link.blank? %>
    <h3>Mais Info</h3>
    <div><p><%= link_to @product.link, @product.link %></p></div>
  <% end %>
</div>

<script language="javascript" type="text/javascript"> 
  $(document).ready(function() {
    $("#photos").PikaChoose({carousel:true});
  });
</script>

